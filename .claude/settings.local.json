{
  "permissions": {
    "allow": [
      "Bash(gh pr view:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(cat:*)",
      "Bash(uv run python:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "SlashCommand",
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/context7-advisor.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "bash ./.claude/hooks/context7-advisor.sh"
          }
        ]
      }
    ]
  }
}
